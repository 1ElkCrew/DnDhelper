<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/b_inventory_maistas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maistas"
                android:visibility="visible" />

            <Button
                android:id="@+id/b_inventory_ginklaisarvai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ginklai ir Šarvai"
                android:visibility="visible" />

            <Button
                android:id="@+id/b_intentory_medziagos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medžiagos"
                android:visibility="visible" />

            <Button
                android:id="@+id/b_inventory_knygos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Knygos"
                android:visibility="visible" />

            <Button
                android:id="@+id/b_inventory_eleksyr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eleksyrai" />

        </LinearLayout>

    </HorizontalScrollView>

    <ListView
        android:id="@+id/lv_inventory"
        android:layout_width="match_parent"
        android:layout_height="372dp" >
    </ListView>

    <Button
        android:id="@+id/b_inventory_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pridėti"
        android:visibility="visible" />

</LinearLayout>
